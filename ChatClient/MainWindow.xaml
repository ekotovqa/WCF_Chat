<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Closing="Window_Closing">
    <Grid>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Height="31" Margin="18,19,0,0" VerticalAlignment="Top" Width="149" Click="btnConnect_Click"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="31" Margin="183,19,0,0" TextWrapping="Wrap" Text="Guest" VerticalAlignment="Top" Width="150"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Center" Height="288" Margin="0,63,0,0" VerticalAlignment="Top" Width="764" />
        <TextBox x:Name="tbMessage" HorizontalAlignment="Center" Height="86" Margin="0,366,0,0" TextWrapping="Wrap" Text="Input message" VerticalAlignment="Top" Width="764" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
